<% content_for :title, "PDF Documents" %>

<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-3xl font-bold text-gray-800">PDF Document Extractor</h1>
    <div class="flex gap-3">
      <%= link_to "ðŸ“Š Export Data", data_exports_index_path, 
          class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
      <%= link_to "Upload New PDF", new_pdf_document_path, 
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded transition duration-200" %>
    </div>
  </div>

  <% if @pdf_documents.any? %>
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      <% @pdf_documents.each do |pdf_document| %>
        <div class="bg-white rounded-lg shadow-md hover:shadow-lg transition duration-200 p-6">
          <div class="flex items-start justify-between mb-4">
            <h3 class="text-lg font-semibold text-gray-800 truncate">
              <%= pdf_document.title %>
            </h3>
            <%= link_to pdf_document_path(pdf_document), method: :delete,
                confirm: "Are you sure you want to delete this PDF?",
                class: "text-red-500 hover:text-red-700" do %>
              <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
            <% end %>
          </div>
          
          <div class="text-sm text-gray-600 mb-4">
            <p><strong>Pages:</strong> <%= pdf_document.page_count || "Unknown" %></p>
            <p><strong>Uploaded:</strong> <%= pdf_document.uploaded_at&.strftime("%B %d, %Y at %I:%M %p") %></p>
            <% if pdf_document.licensor.present? %>
              <p><strong>Owner:</strong> <%= truncate(pdf_document.licensor, length: 40) %></p>
            <% end %>
            <% if pdf_document.licensee.present? %>
              <p><strong>Tenant:</strong> <%= truncate(pdf_document.licensee, length: 40) %></p>
            <% end %>
          </div>
          
          <% if pdf_document.filtered_data.present? %>
            <div class="mb-4">
              <p class="text-sm font-medium text-gray-700 mb-2">Key Information:</p>
              <div class="bg-blue-50 p-3 rounded border border-blue-200">
                <p class="text-xs text-blue-700 whitespace-pre-wrap">
                  <%= truncate(pdf_document.filtered_data, length: 200) %>
                </p>
              </div>
            </div>
          <% elsif pdf_document.content.present? %>
            <div class="mb-4">
              <p class="text-sm text-gray-700 line-clamp-3">
                <%= truncate(pdf_document.content, length: 150) %>
              </p>
            </div>
          <% end %>
          
          <%= link_to "View Details", pdf_document_path(pdf_document),
              class: "inline-block bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded text-sm transition duration-200 mr-2" %>
          
          <% if pdf_document.content.present? %>
            <%= link_to "All Data", data_view_pdf_document_path(pdf_document),
                class: "inline-block bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded text-sm transition duration-200" %>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
      </svg>
      <h3 class="mt-2 text-sm font-medium text-gray-900">No PDF documents</h3>
      <p class="mt-1 text-sm text-gray-500">Get started by uploading a PDF document.</p>
      <div class="mt-6">
        <%= link_to "Upload PDF", new_pdf_document_path,
            class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700" %>
      </div>
    </div>
  <% end %>
</div>
